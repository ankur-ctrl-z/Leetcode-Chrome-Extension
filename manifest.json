{
  "manifest_version": 3,
  "name": "LeetCode Assistant",
  "version": "1.5",
  "description": "Your direct and logical LeetCode coding assistant.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://*.leetcode.com/problems/*",
    "https://api.groq.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "leetcode-icon.webp"
  },
  "icons": {
    "16": "leetcode-icon.webp",
    "48": "leetcode-icon.webp",
    "128": "leetcode-icon.webp"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*", "https://www.leetcode.com/problems/*"],
      "js": ["content.js"]
    }
  ]
}